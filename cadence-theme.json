{
  "meta": {
    "name": "Cadence",
    "version": "1.0.0",
    "philosophy": "Structured calm with institutional authority"
  },
  "foundation": {
    "color": {
      "deepSpaceBlue": "#00263E",
      "carbonBlack": "#1E1E1E",
      "yaleBlue": "#063C5E",
      "balticBlue": "#276287",
      "brightSnow": "#FAF9F7",
      "parchment": "#F3F0EC",
      "khakiBeige": "#B8A89A",
      "taupe": "#8F8174",
      "mutedTeal": "#8FA89B",
      "jungleTeal": "#6F8F82",
      "toastedAlmond": "#C28E74",
      "cinnamonWood": "#A46E55",
      "blushedBrick": "#B8504D",
      "smokyRose": "#7C616C",
      "brilliantAzure": "#0085D9"
    },
    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px"
    },
    "radius": {
      "sm": "4px",
      "md": "8px",
      "lg": "12px"
    },
    "shadow": {
      "subtle": "0 1px 2px rgba(0,0,0,0.05)",
      "medium": "0 4px 8px rgba(0,0,0,0.08)"
    }
  },
  "typography": {
    "fontFamily": {
      "sans": "Inter, system-ui, sans-serif",
      "serif": "IBM Plex Serif, serif"
    },
    "scale": {
      "h1": {
        "size": "44px",
        "lineHeight": "52px",
        "weight": 600
      },
      "h2": {
        "size": "30px",
        "lineHeight": "38px",
        "weight": 600
      },
      "h3": {
        "size": "22px",
        "lineHeight": "30px",
        "weight": 600
      },
      "bodyLg": {
        "size": "18px",
        "lineHeight": "28px",
        "weight": 400
      },
      "body": {
        "size": "16px",
        "lineHeight": "24px",
        "weight": 400
      },
      "meta": {
        "size": "13px",
        "lineHeight": "20px",
        "weight": 400
      }
    }
  },
  "semantic": {
    "surface": {
      "primary": "brightSnow",
      "secondary": "parchment",
      "container": "khakiBeige"
    },
    "text": {
      "heading": "deepSpaceBlue",
      "primary": "carbonBlack",
      "secondary": "taupe",
      "link": "brilliantAzure",
      "inverse": "#FFFFFF"
    },
    "brand": {
      "primary": "deepSpaceBlue",
      "starter": "toastedAlmond",
      "premium": "mutedTeal",
      "archive": "balticBlue"
    },
    "status": {
      "success": "mutedTeal",
      "warning": "cinnamonWood",
      "error": "blushedBrick"
    }
  },
  "motion": {
    "duration": {
      "fast": "150ms",
      "standard": "250ms"
    },
    "easing": {
      "standard": "ease-in-out"
    }
  },
  "accessibility": {
    "minContrastRatio": 4.5,
    "focusRing": {
      "width": "2px",
      "color": "balticBlue"
    }
  }
}
